export PATH=/opt/homebrew/bin:$PATH
export PATH=/opt/homebrew/sbin:$PATH
export PATH="/opt/homebrew/opt/curl/bin:$PATH"
export PATH="$PATH:/Users/szeber/istio-1.0.3/bin"
